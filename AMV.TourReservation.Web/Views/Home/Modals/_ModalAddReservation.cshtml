<div class="modal fade" id="addReservationModal" tabindex="-1" role="dialog" aria-labelledby="addReservationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addReservationModalLabel">Añadir Reserva</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Formulario para añadir Reserva -->
                <form id="addReservationForm" method="post">
                    <input type="hidden" id="tourId" name="tourId">
                    <div class="form-group">
                        <label for="ReservationClient">Cliente</label>
                        <input type="text" class="form-control" id="ReservationClient" name="ReservationClient" required>
                    </div>
                    <div class="form-group">
                        <label for="ReservationDate">Fecha de Reserva</label>
                        <input type="date" class="form-control" id="ReservationDate" name="ReservationDate" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button class="btn btn-primary" data-url="@Url.Action("AddReservation", "Reservation")" id="saveReservationBtn">Guardar</button>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-success fade out" id="alertReservation">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    Reserva Agregada
</div>
